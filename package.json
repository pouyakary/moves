{
    "browser":         "./dist/web/extension.js",
    "description":     "Moves your cursor under the columns in the above line",
    "displayName":     "Pillars",
    "icon":            "icon.png",
    "name":            "pillar",
    "preview":         true,
    "publisher":       "karyfoundation",
    "version":         "3.0.1",
    "repository": {
        "git":     "https://github.com/pouyakary/pillar.git"
    },
    "engines": {
        "vscode":      "^1.72.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command":     "pillar.moveCursorUnderNextColumnAbove",
                "title":       "üïπÔ∏è Move Cursor under Next Column Above"
            },
            {
                "command":     "pillar.moveCursorUnderNextColumnBelow",
                "title":       "üïπÔ∏è Move Cursor over Next Column Below"
            },
            {
                "command":     "pillar.moveCursorUnderPreviousColumnAbove",
                "title":       "üïπÔ∏è Move Cursor under Previous Column Above"
            },
            {
                "command":     "pillar.moveCursorUnderPreviousColumnBelow",
                "title":       "üïπÔ∏è Move Cursor over Previous Column Below"
            },
            {
                "command":     "pillar.selectAllWordNeighborLines",
                "title":       "üóúÔ∏è Add Cursor to all Neighbor Lines"
            }
        ],
        "keybindings": [
            {
                "command":     "pillar.moveCursorUnderNextColumnAbove",
                "key":         "cmd+alt+right",
                "when":        "editorTextFocus"
            },
            {
                "command":     "pillar.moveCursorUnderNextColumnBelow",
                "key":         "ctrl+alt+right",
                "when":        "editorTextFocus"
            },
            {
                "command":     "pillar.moveCursorUnderPreviousColumnAbove",
                "key":         "cmd+alt+left",
                "when":        "editorTextFocus"
            },
            {
                "command":     "pillar.moveCursorUnderPreviousColumnBelow",
                "key":         "ctrl+alt+left",
                "when":        "editorTextFocus"
            },
            {
                "command":     "pillar.selectAllWordNeighborLines",
                "key":         "alt+cmd+a",
                "when":        "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command":     "pillar.selectAllWordNeighborLines"
                }
            ]
        }
    },
    "scripts": {
        "compile-web":             "webpack",
        "lint":                    "eslint src --ext ts",
        "package-web":             "webpack --mode production --devtool hidden-source-map",
        "pretest":                 "yarn run compile-web",
        "run-in-browser":          "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
        "test":                    "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
        "vscode:prepublish":       "yarn run package-web",
        "watch-web":               "webpack --watch"
    },
    "devDependencies": {
        "@types/mocha":                        "^9.1.1",
        "@types/vscode":                       "^1.72.0",
        "@types/webpack-env":                  "^1.17.0",
        "@typescript-eslint/eslint-plugin":    "^5.31.0",
        "@typescript-eslint/parser":           "^5.31.0",
        "@vscode/test-web":                    "^0.0.29",
        "assert":                              "^2.0.0",
        "eslint":                              "^8.20.0",
        "mocha":                               "^10.0.0",
        "process":                             "^0.11.10",
        "ts-loader":                           "^9.3.1",
        "typescript":                          "^4.7.4",
        "webpack":                             "^5.74.0",
        "webpack-cli":                         "^4.10.0"
    }
}